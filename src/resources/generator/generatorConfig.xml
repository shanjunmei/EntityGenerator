<!DOCTYPE generatorConfiguration
        PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">

<generatorConfiguration>
	<properties resource="resources/generator/config.properties" />
	<classPathEntry
		location="D:\java\maven\com\microsoft\sqljdbc4j\1\sqljdbc4j-1.jar" />
	<context id="sqlserver" defaultModelType="flat"> <!-- targetRuntime="MyBatis3Simple" -->
		<plugin type="resources.generator.plugin.PaginationPlugin"></plugin>
		
		<commentGenerator type="org.mybatis.generator.internal.DefaultCommentGenerator"/>
		
		<jdbcConnection driverClass="${jdbc.driverClass}"
			connectionURL="${jdbc.url}" userId="${jdbc.user}" password="${jdbc.password}">
		</jdbcConnection>

		<javaModelGenerator targetPackage="${targetModelPackage}"
			targetProject="${targetProject}">
			<property name="trimStrings" value="true" /><!-- 自动trim -->
		</javaModelGenerator>
		


		<sqlMapGenerator targetPackage="${targetXMLMapperPackage}"
			targetProject="${targetProject}" />

		<javaClientGenerator targetPackage="${targetMapperPackage}"
			targetProject="${targetProject}" type="XMLMAPPER"><!--XMLMAPPER ANNOTATEDMAPPER -->
			<!-- <property name="rootInterface" value="com.dachen.mapper"/> -->
		</javaClientGenerator>

	
		
		<table tableName="api_channel_product" >
			<generatedKey column="id" sqlStatement="SqlServer"  identity="true" />	<!-- sqlStatement="SqlServer" -->
			<columnRenamingRule searchString="^f_"
				replaceString="" />
		</table>
	
		<table tableName="api_product" >
			<columnRenamingRule searchString="^f_"
				replaceString="" />
		</table>
		
	
	</context>
	
	
</generatorConfiguration>